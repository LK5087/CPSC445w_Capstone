import urllib.request, urllib.error, urllib.parse

# These variables will ultimately be set by user input from the html server
# Ideally, the parameter input will be a series of drop downs, select the website and then the board.. etc.
board = "v"
website = "http://4channel.org/" + board + "/catalog/"
searchstring = "mario"

while True:
    try:
        board = input("What board do you want to search?\n----> ")

        url = 'http://4channel.org/' + board + '/catalog'

        response = urllib.request.urlopen(url)
        webContent = response.read()


#       print(webContent[0:100])
        f = open('board_catalog.html', 'w')
        f.write(repr(webContent))
        f.close
        break

    except:
        print("Sorry, the board you entered does not exist.")
